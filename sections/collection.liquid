<div class="page-width">
  {% case section.settings.grid %}
    {% when 2 %}
      {% assign grid_item = 'col-lg-2' %}
    {% when 3 %}
      {% assign grid_item = 'col-lg-3' %}
    {% when 4 %}
      {% assign grid_item = 'col-lg-4' %}
    {% when 5 %}
      {% assign grid_item = 'col-lg-5' %} 
  {% endcase %}

  {%- assign collection = collections[section.settings.collection] -%}
  {% if collection.title != blank %}
  <div class="section-header text-center">
    <h2>{{ collection.title | escape }}</h2>
    <div class="header--content">
      <p>{{ collection.description }}</p>
    </div>
  </div>
{% endif %}
  <div class="collection--container">
    <div class="collection--row row {{grid_item}}">
      {% for product in collection.products %}
        <div class="item-grid">
          <div class="product--item">
            <figure>
              <div class="product--item__image">
                <img src="{{ product | img_url }}" alt="">
              </div>
              <figcaption>
               <div class="product--option">
                <div class="product--option__color">
                  <ul class="btn--color">
                    {% for color in product.options_by_name['Color'].values %}
                      <li class="btn--color__{{color}}"></li>
                    {% endfor %}
                  </ul>
                </div>
                <div class="product--option__size">
                  <ul class="btn--size">
                    {% for productsize in product.options_by_name['Size'].values %}
                      <li>{{ productsize }}</li>
                    {% endfor %}
                  </ul>
                </div>
               </div>
               <div class="product--item__tags">
                {% for tags in product.tags %}
                  <span class="product--item__tag ">{{tags}}</span>
                {% endfor %}
               </div>
               <h4 class="product--item__name">
                 {{product.title}}
               </h4>
               <div class="product--item__price">
                  <ul class="product--price">
                    <li>
                      <p class="product--price__old">{{ product.compare_at_price | money }}</p>
                    </li>
                    <li>
                      <p class="product--price {% if product.compare_at_price != blank %} color__red {% endif %}">{{ product.price | money }}</p>
                    </li>
                  </ul>
               </div>
              </figcaption>
              <div class="sale ">
                <span class="{% if product.compare_at_price != blank %} show {% endif %}">sale</span>
              </div>
            </figure>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>



