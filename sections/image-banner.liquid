<style>
  .wrapper--title__style {
    color: {{section.settings.title_color }};
    font-size: {{section.settings.title_font_size}}px;
  }
  .wrapper--content__style {
    color: {{section.settings.content_color }};
  }
</style>
<div class="home--banner__slide">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
              <div class="home--banner__image">
                <img src="{{section.settings.home_banner | img_url: '300x300'}}" alt="">
              </div>
              <div class="home--banner__wrapper {% if section.settings.content_alignment == "center" %} text-center {% endif %}">
                <div class="home--banner__wrapper--title">
                    <h4 class="{% if section.settings.banner_title != blank %} wrapper--title__style {% endif %}">{{ section.settings.banner_title }}</h4>
                </div>
                <div class="home--banner__wrapper--content">
                  <p class="{% if section.settings.banner_content != blank %} wrapper--content__style {% endif %}">{{ section.settings.banner_content }}</p>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>
