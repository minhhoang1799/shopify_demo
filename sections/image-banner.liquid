<div class="home--banner__slide">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            {% for block in section.blocks %}
                {% style %}
                  .block-{{block.id}} .wrapper--title__style {
                    color: {{ block.settings.title_block_color }};
                    font-size: {{ block.settings.title_block_font_size}}px;
                  }
                  .block-{{block.id}} .wrapper--content__style {
                    color: {{ block.settings.content_block_color }};
                  }
                  .block-{{block.id}} .wrapper--btn__color {
                    background: {{ block.settings.banner_block_button_color}};
                    color: {{ block.settings.button_block_text_color}};
                    text-transform: uppercase;
                  }
                  .block-{{block.id}} .wrapper--btn__color:hover {
                    color: {{ block.settings.button_block_text_color}} !important;
                    text-decoration: underline;
                    box-shadow: 0 0 10px 0 rgba({{ block.settings.button_block_text_color }}, .3);
                  }
                {% endstyle %}
              <div class="swiper-slide block-{{block.id}}">
                <div class="home--banner__image">
                  <img src="{{ block.settings.home_block_banner | img_url: '300x300'}}" alt="">
                </div>
                <div class="home--banner__wrapper {% if block.settings.content_block_alignment == "center" %} text-center {% endif %}">
                  <div class="home--banner__wrapper--title">
                      <h4 class="{% if block.settings.banner_block_title != blank %} wrapper--title__style {% endif %}">{{ block.settings.banner_block_title }}</h4>
                  </div>
                  <div class="home--banner__wrapper--content">
                    <p class="{% if block.settings.banner_block_content != blank %} wrapper--content__style {% endif %}">{{ block.settings.banner_block_content }}</p>
                  </div>
                  <a href="{{block.settings.banner_block_button_link}}" class="home--wrapper__btn wrapper--btn__color {% if block.settings.banner_block_button_name == blank %} hidden {% endif %}">{{block.settings.banner_block_button_name }}</a>
                </div>
              </div>
            {% endfor %}
        </div>
    </div>
    <div class="swiper-prev {% if section.settings.banner_navigation == "show" %} show_navigation {% endif %}">
      {% render 'icon-chevron-left' %}
    </div>
    <div class="swiper-next {% if section.settings.banner_navigation == "show" %} show_navigation {% endif %}">
      {% render 'icon-chevron-right' %}
    </div>
    <div class="{% if section.settings.banner_navigation == "hidden" %} hidden_pagination {% endif %} swiper-pagination"></div>
</div>
